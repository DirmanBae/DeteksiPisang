<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivDetailGambar"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvDetailDeteksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deteksi: ..."
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDetailAkurasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akurasi: ..."
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvDetailTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal: ..."
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvDetailNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengguna: ..."
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/tvDetailCatatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catatan Penyuluh: "
            android:layout_marginTop="8dp"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
